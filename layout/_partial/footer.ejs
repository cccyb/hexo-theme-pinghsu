                <li><a href="<%- url_for(post.path) %>"><%= post.title %></a></li>
                <% }) %>
            </div>
            <% } %>
            <% if (theme.valine.enable) { %>
            <div class="meta-item meta-comments">
            </div>
            <% } %>
		</div>
	</div>
</footer>

